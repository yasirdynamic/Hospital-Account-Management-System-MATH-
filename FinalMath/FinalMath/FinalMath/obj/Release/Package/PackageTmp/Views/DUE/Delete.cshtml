        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2>Delete</h2>
                    </div>
                    <div class="card-body">

                        <h3>Are you sure you want to delete this?</h3>

                        <div>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.DATE)
                                </dt>

                                <dd>
