                        </dl>
                    </div>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.HEAD_ID }, new { @class = "btn btn-sm btn-success" })
                        <a href="@Url.Action("Index", "HEAD")" class="btn btn-sm btn-primary">Back to List</a>

                    </p>
