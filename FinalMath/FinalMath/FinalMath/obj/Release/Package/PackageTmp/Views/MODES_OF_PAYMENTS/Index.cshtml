@model IEnumerable<FinalMath.Models.MODES_OF_PAYMENTS>

@if (Session["Admin"] != null)
{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
else
{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDirector.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>PAYMENT TYPES</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Payment Type</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <p>
                            @Html.ActionLink("Add New +", "Create")
                        </p>
                    </div>

                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>

                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MODES_OF_PAYMENT_NAME)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.isActive)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MODES_OF_PAYMENT_NAME)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.isActive)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.MODES_OF_PAYMENTS_ID }, new { @class = "btn btn-sm btn-primary" })
                                            @Html.ActionLink("Details", "Details", new { id = item.MODES_OF_PAYMENTS_ID }, new { @class = "btn btn-sm btn-success" })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.MODES_OF_PAYMENTS_ID }, new { @class = "btn btn-sm btn-danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
