@model FinalMath.Models.VENDOR


@if (Session["Admin"] != null)
{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
else
{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDirector.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>User Type</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">UserType</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2>Details</h2>
                    </div>
                    <div class="card-body">

                        <div>

                            <dl class="dl-horizontal">
                                <dt>
                                    @if (!String.IsNullOrEmpty(Model.VENDOR_PIC))
                                    {
                                        <img src="@Url.Content(Model.VENDOR_PIC)" height="100" width="100" />
                                    }

                                    @Html.DisplayNameFor(model => model.VENDOR_PIC)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.VENDOR_PIC)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.VENDOR_NAME)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.VENDOR_NAME)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.VENDOR_ADDRESS)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.VENDOR_ADDRESS)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.VENDOR_PHONE)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.VENDOR_PHONE)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.VENDOR_DESCRIPTION)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.VENDOR_DESCRIPTION)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.isActive)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.isActive)
                                </dd>

                            </dl>
                        </div>
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = Model.VENDOR_ID }, new { @class = "btn btn-sm btn-success" })
                            <a href="@Url.Action("Index", "VENDOR")" class="btn btn-sm btn-primary">Back to List</a>

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
